{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "pretty": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "allowJs": false,
    "outDir": "lib",
    "types" : ["node", "webpack", "jest", "immutable"]
  },
  "compileOnSave": false,
  "buildOnSave": false
}
